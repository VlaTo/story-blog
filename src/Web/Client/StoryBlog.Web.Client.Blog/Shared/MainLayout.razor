@inherits LayoutComponentBase

<MudThemeProvider Theme=@theme />
<MudSnackbarProvider />
<MudDialogProvider MaxWidth=MaxWidth.ExtraLarge
    CloseButton=true
    CloseOnEscapeKey=true
    Position=DialogPosition.Center
/>

<MudLayout>
    <MudAppBar Elevation=1 Dense=true Fixed=true>
        <MudSpacer/>
        <LoginDisplay />
    </MudAppBar>
    <MudDrawer Elevation=1 Open=true>
        <MudDrawerHeader>
            <MudText Typo=@Typo.h5 Class="mt-1">Header</MudText>
        </MudDrawerHeader>
        <MudNavMenu>
            <MudNavLink Href="" Match=@NavLinkMatch.All>Home</MudNavLink>
            <MudNavLink Href="counter" Match=@NavLinkMatch.Prefix>Counter</MudNavLink>
            <MudNavLink Href="create" Match=@NavLinkMatch.All>Write a post</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent Class="d-flex align-start">
        <MudButton OnClick=@DoSendMessage>Отправить</MudButton>
        <MudContainer Class="d-block flex-2" MaxWidth=@MaxWidth.ExtraLarge>
            @Body
        </MudContainer>
        <MudContainer Class="d-block flex-1" MaxWidth=@MaxWidth.ExtraSmall>
            <AboutBox>

            </AboutBox>
        </MudContainer>
    </MudMainContent>
</MudLayout>